{
  "name": "web-server",
  "version": "0.1.0",
  "scripts": {
    "build": "bsb -make-world",
    "run": "npm run clean && npm run build && node src/Demo.bs.js",
    "clean": "bsb -clean-world",
    "watch:bsb": "bsb -make-world -w",
    "watch:server": "npm run build && nodemon src/Demo.bs.js",
    "watch": "npm-run-all -p -c watch:**"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "^4.0.6",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3"
  },
  "dependencies": {
    "@glennsl/bs-json": "^3.0.0",
    "bs-express": "^0.9.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "watch": [
      "src/*.js"
    ]
  }
}
